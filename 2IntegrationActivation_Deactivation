pipeline {
    agent any
    parameters {
        booleanParam(name: 'ActivateCheckbox', defaultValue: false, description: 'Activate Checkbox')
    }
    stages {
        stage('Activation') {
            steps {
                script {
                    if (params.ActivateCheckbox) {
                        // Perform action when the checkbox is checked
						bat 'javac ActivateIntegration.java'
						bat 'start java ActivateIntegration ${params.INSTANCE_URL} ${params.INTEGRATION_IDENTIFIER}'

                    } else {
                        // Perform a different action when the checkbox is not checked
						bat 'javac DeactivateIntegration.java'
						bat 'start java DeactivateIntegration ${params.INSTANCE_URL} ${params.INTEGRATION_IDENTIFIER}'               
					}
                }
            }
        }
    }
}
